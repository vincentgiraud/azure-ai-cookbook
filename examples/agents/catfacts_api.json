{
  "openapi": "3.0.0",
  "info": {
    "title": "Cat facts API",
    "description": "API for fetching cat facts information",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://cat-fact.herokuapp.com"
    }
  ],
  "paths": {
    "/facts/random": {
      "get": {
        "operationId": "getFacts",
        "summary": "Get facts",
        "description": "Retrieve one or more Facts.",
        "parameters": [
          {
            "in": "query",
            "name": "animal_type",
            "required": true,
            "schema": {
              "type": "string",
              "default": "cat"
            },
            "description": "Type of animal the fact will describe"
          },
          {
            "in": "query",
            "name": "amount",
            "required": true,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Number of Facts to retrieve. If set to one, response will be a fact object. If many, response will be an array of Facts"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "591f9894d369931519ce358f"
                    },
                    "__v": {
                      "type": "integer",
                      "example": 0
                    },
                    "text": {
                      "type": "string",
                      "example": "It has been scientifically proven that stroking a cat can lower one's blood pressure."
                    },
                    "updatedAt": {
                      "type": "string",
                      "example": "2018-01-04T01:10:54.673Z"
                    },
                    "deleted": {
                      "type": "boolean",
                      "example": false
                    },
                    "source": {
                      "type": "string",
                      "example": "api"
                    },
                    "sentCount": {
                      "type": "integer",
                      "example": 3
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}